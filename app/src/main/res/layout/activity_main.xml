<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/red_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="243dp"
        android:layout_height="237dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo_white_large" />

    <Button
        android:id="@+id/button"
        android:layout_width="181dp"
        android:layout_height="77dp"
        android:layout_marginTop="364dp"
        android:onClick="callCreationCompte"
        android:text="Accéder à mes comptes"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/red_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#815B5B" />

    <Button
        android:id="@+id/button2"
        android:layout_width="181dp"
        android:layout_height="77dp"
        android:onClick="callConversion"
        app:backgroundTint="@color/red_button"
        android:text="Convertir des devises"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>